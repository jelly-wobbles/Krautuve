{% extends "::base.html.twig" %}

{% block title %}
    Pagrindinis | {{ parent() }}
{% endblock %}


{% block stylesheets %}
    {% stylesheets
        '@KTUShopBundle/Resources/less/baseView/*'
        '@KTUShopBundle/Resources/less/main/*'
        combine=true %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="main-wrapper clearfix">
        <div class="enlarged">

        </div>

        {% include '@KTUShop/baseView/mainHeader.html.twig' %}

        {% include '@KTUShop/baseView/navBar.html.twig' %}


            <div class="main-container col-lg-12 clearfix">

                {% include '@KTUShop/Main/categories.html.twig' %}
                {% include '@KTUShop/Main/itemList.html.twig' %}

            </div>

    </div>

    {% include '@KTUShop/baseView/footer.html.twig' %}

{% endblock %}

{% block javascripts %}
    {% javascripts
        '@KTUShopBundle/Resources/javascript/main/*'
        '@KTUShopBundle/Resources/javascript/assetsClasses/*'
        combine=true %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        $(document).ready(function() {
            search('{{ asset('images/loading.gif') }}');
        });
    </script>
{% endblock %}
